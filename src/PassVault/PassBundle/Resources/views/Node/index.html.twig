{% extends ':Layout:base.html.twig' %}

{% block body %}
    <div class="wrapper">
        {% include ':Layout:header.html.twig' %}
        {% include ':Layout:sidebar.html.twig' %}
        <div class="content-wrapper">
            <section class="content-header">
                <h1>Passwords</h1>
            </section>
            <section class="content">
                <div class="col-xs-4">
                    <div class="box">
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-bordered treegrid">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for treenode in nodes %}
                                    <tr class="treegrid-{{ treenode.id }}{% if treenode.parent != null %} treegrid-parent-{{ treenode.parent.id }}{% endif %}{% if node is defined and treenode == node %} tree-activate{% endif %}">
                                        <td>
                                            {% if treenode.icon is defined %}
                                                <i class="{{ treenode.icon }}"></i>
                                            {% endif %}
                                            <span class="tree-space"><a href="{{ path('passvault_node_view', {'id': treenode.id }) }}">{{ treenode.name }}</a></span>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-xs-8">
                    {% if node is instanceof('\\PassVault\\PassBundle\\Entity\\Folder') %}
                        {% include 'PassVaultPassBundle:Folder:view.html.twig' with {'node': node, 'form': form} %}
                    {% elseif node is instanceof('\\PassVault\\PassBundle\\Entity\\Organization') %}
                        {% include 'PassVaultPassBundle:Organization:view.html.twig' with {'node': node, 'form': form} %}
                    {% elseif node is instanceof('\\PassVault\\PassBundle\\Entity\\Password') %}
                        {% include 'PassVaultPassBundle:Password:view.html.twig' with {'node': node, 'form': form} %}
                    {% endif %}
                </div>
            </section>
        </div>
    </div>
{% endblock %}
