{% form_theme form 'PassVaultPassBundle:Form:password.html.twig' %}

{{ form_start(form) }}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Password {{ node.name }}</h3>
            <div class="box-tools pull-right">
                {{ form_widget(form.submit) }}
            </div>
        </div>
        <div class="box-body">
            {{ form_row(form.name) }}
            {{ form_row(form.parent) }}
            {{ form_row(form.link) }}
            {{ form_row(form.account) }}
            {{ form_row(form.password) }}
        </div>
    </div>
{{ form_end(form) }}