{{ form_start(form) }}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Folder {{ node.name }}</h3>
            <div class="box-tools pull-right">
                {{ form_widget(form.submit) }}
            </div>
        </div>
        <div class="box-body">
            {{ form_row(form.name) }}
        </div>
    </div>
{{ form_end(form) }}
<div class="box">
    <div class="box-body table-responsive no-padding">
        <table class="table table-bordered" data-bind="ready{treegrid()}">
            <thead>
                <tr>
                    <th style="width: 150px">Name</th>
                    <th>URL</th>
                    <th style="width: 200px">Username</th>
                    <th style="width: 200px">Password</th>
                </tr>
            </thead>
            <tbody>
                {% for child in node.children %}
                    {% if child is instanceof('\\PassVault\\PassBundle\\Entity\\Password') %}
                        <tr>
                            <td>{{ child.name }}</td>
                            <td>{{ child.link }}</td>
                            <td>{{ child.account }}</td>
                            <td>{{ child.password }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>