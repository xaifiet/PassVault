                    </a>
                    <ul class="dropdown-menu">
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="{{ path('passvault_user_logout') }}">Signout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
